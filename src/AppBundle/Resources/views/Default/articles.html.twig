{% extends "@App/Default/base.html.twig" %}

{% block page %}
    <section class="post_review">
        {% for article in articles %}
            <article class="apercu">
                <div class="thumb">
                    <img src="{{ asset('img/' ~ article.id ~ '.jpg') }}" alt='thumb'>
                </div>


                <h2>{{ article.titre }}</h2>
                {{ article.content }}
            </article>
        {% endfor %}
    </section>
<section>
